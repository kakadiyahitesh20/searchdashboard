</html>

<script>
    var socket = io();
    $('form').submit(function(){
        var name = $('#message').val();
        socket.emit('chat message', $('#message').val());
        $('#message').val('');
        return false;
    });
    socket.on('chat message', function(msg){
        $("#messages").append('<p id="fname"><%= usersinfo[0].name; %> :</p>');
        $('#messages').append($('<p>').text(msg));
    });
</script>

